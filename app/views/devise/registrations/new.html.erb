<div class="signup-form background-img d-flex flex-column justify-content-end">
  <div class="devise-form-card">
    <div class="signup-container">

      <h2 class="bold-text">Register to Knitly!</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs pt-3">

          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: "Email",
                      input_html: { autocomplete: "email" } %>

          <%= f.input :first_name,
                      placeholder: "First name",
                      label: false
          %>

          <%= f.input :password,
                      required: true,
                      label: false,
                      placeholder: "Password",
                      input_html: { autocomplete: "new-password" } %>

          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      placeholder: "Confirm Password",
                      input_html: { autocomplete: "new-password" } %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "button signup-btn mt-1" %>
        </div>

      <% end %>

      <div class="signup-container">
        <div class="registration-link">
          Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "simple-link-text" %>
        </div>
      </div>

    </div>
  </div>
</div>
