<%# Main container %>
<%# a bootstrap container with default padding %>
<div class="container project-container">

<%= render "components/task_modal" %>
<%= render "components/start_modal" %>


  <%# lets Bootstrap JS target this carousel, applies styling + animation, makes it auto-slide.%>
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @project.images.each_with_index do |img, i| %>
        <div class="carousel-item <%= 'active' if i == 0 %>">
          <%= cl_image_tag(img.key, class: "d-block w-100")  if @project.images.attached? %>
        </div>
      <% end %>
    </div>

    <%# Carousel navigation buttons %>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <h2 class="mt-4"><strong><%= @project.title.capitalize %></strong></h2>

<%# Tasks %>

<% if @project.status == "ongoing" %>
<div class= "d-flex pt-4">
  <%@project.tasks.sort_by { |t| t.id }.each do |task|%>
  <%= render "components/progress_bar", task: task %>
  <%end%>
</div>
<%end%>

<%# Status: %>

<div class= "d-flex justify-content-between">
  <span class="label">Status: <%= @project.status %></span>
</div>




<div class="ask-yarni d-flex justify-content-around mt-3 mb-3">
  <% if @project.status == "finished" %>
  <h6>Do you have any leftover yarn? Yarni can tell you what you can make with it </h6>
    <button class="button">Ask</button>
    <% end %>
</div>


<%# Bootstrap flex container - title %>
<div class="d-flex justify-content-between align-items-center mt-3">
  <h2 class="project-title"><%= @project.title.capitalize %></strong></h2>

  <div class="d-flex gap-3">
    <%# delete button %>
    <%= link_to project_path(@project),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>

    <%# edit button %>
    <%= link_to edit_project_path(@project) do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <% end %>
  </div>
</div>


