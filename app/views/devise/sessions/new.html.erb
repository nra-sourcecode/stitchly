<div class='signup-form background-img d-flex flex-column justify-content-end'>
  <div class='login-card'>
    <h2>Welcome to Stitchly!</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
            <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      

      <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>

      <div class="register-link">
      Not a member? <%= link_to "Register now!", new_registration_path(resource_name) %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>